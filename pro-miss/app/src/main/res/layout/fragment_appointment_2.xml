<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/frg_appoint2_Min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="1dp"
        android:gravity="center">

        <Button
            android:id="@+id/frg_appoint2_btn1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_pink"
            android:text="-"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_textMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/frg_appoint2_btn1"
            android:text="5"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/fragment_textMin"
            android:layout_alignBottom="@id/fragment_textMin"
            android:layout_toRightOf="@id/fragment_textMin"
            android:gravity="center"
            android:text=" 분 당"
            android:textSize="20dp" />

        <Button
            android:id="@+id/frg_appoint2_btn2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textView"
            android:background="@drawable/btn_pink"
            android:text="+"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/frg_appoint2_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frg_appoint2_Min"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/frg_appoint2_addmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="#D76C52"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/frg_appoint2_moneybar"
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:layout_below="@id/frg_appoint2_money"
        android:layout_alignLeft="@id/frg_appoint2_money"
        android:layout_alignRight="@id/frg_appoint2_money"
        android:layout_marginTop="10dp"
        android:background="#D76C52"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frg_appoint2_moneybar"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frg_appoint2_onebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_twobtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_threebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="3"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frg_appoint2_fourbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_fivebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_sixbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="6"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frg_appoint2_sevenbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_eightbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_ninebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="9"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frg_appoint2_cancelbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="취소"
                android:textSize="18sp" />

            <Button
                android:id="@+id/frg_appoint2_zerobtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_deletebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="지우기"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="벌금 금액"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/frg_appoint2_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:id="@+id/frg_appoint2_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frg_appoint2_title"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/frg_appoint2_addmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="#70ad47"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/frg_appoint2_moneybar"
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:layout_below="@id/frg_appoint2_money"
        android:layout_alignLeft="@id/frg_appoint2_money"
        android:layout_alignRight="@id/frg_appoint2_money"
        android:layout_marginTop="10dp"
        android:background="#70ad47"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frg_appoint2_moneybar"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frg_appoint2_onebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_twobtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_threebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="3"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frg_appoint2_fourbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_fivebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_sixbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="6"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frg_appoint2_sevenbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_eightbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_ninebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="9"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frg_appoint2_cancelbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="취소"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_zerobtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frg_appoint2_deletebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="지우기"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <Spinner
        android:id="@+id/fragment_spMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frg_appoint2_title"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@id/frg_appoint2_title"
        android:layout_marginBottom="1dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fragment_spMin"
        android:layout_alignTop="@id/fragment_spMin"
        android:text="분 당"
        android:layout_alignBottom="@id/fragment_spMin"
        android:gravity="center"
        android:textSize="20dp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<RelativeLayout
    android:background="@drawable/corner_round"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="30dp"
    android:layout_marginTop="30dp"
    android:id="@+id/add_friend_item"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:id="@+id/add_friend_image"
        android:layout_height="80dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/friend_image"
        />



</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="임수현"
        android:id="@+id/add_friend_name"
        android:fontFamily="@font/bamin_font"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal|bottom"

        android:textSize="18sp"/>
    <ImageView
        android:layout_width="50dp"
        android:id="@+id/add_friend_king"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"

        android:src="@drawable/king"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/add_friend_remove"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_remove_black_24dp"
        app:civ_border_color="#000000"
        app:civ_circle_background_color="#ffffff"
        app:civ_border_width="2dp"/>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/charge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="충전 하기"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/charge_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/charge_title"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/charge_addmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textColor="#70ad47"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/charge_moneybar"
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:layout_below="@id/charge_money"
            android:layout_alignLeft="@id/charge_money"
            android:layout_alignRight="@id/charge_money"
            android:layout_marginTop="10dp"
            android:background="#70ad47"></View>

    <LinearLayout
        android:id="@+id/Linear_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/charge_moneybar"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/charge_onebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/charge_twobtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/charge_threebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="3"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/charge_fourbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/charge_fivebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/charge_sixbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="6"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/charge_sevenbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/charge_eightbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/charge_ninebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="9"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/charge_cancelbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="취소"
                android:textSize="20sp" />

            <Button
                android:id="@+id/charge_zerobtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/charge_deletebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:text="지우기"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/charge_chargeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Linear_btn"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@id/Linear_btn"
        android:layout_alignRight="@id/Linear_btn"
        android:layout_marginTop="100dp"
        android:background="@color/colorGreen"
        android:textColor="#ffffff"
        android:text="충전하기"
        android:textSize="20sp"
        android:textStyle="bold"/>


</RelativeLayout>

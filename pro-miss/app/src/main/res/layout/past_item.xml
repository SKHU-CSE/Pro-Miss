<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/past_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/past_cardview"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:background="#ffffff"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/past_CardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="볼링 치러 가자"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/past_CardDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/past_CardTitle"
            android:layout_alignLeft="@id/past_CardTitle"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="2019/03/15"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/past_CardTitle" />

        <TextView
            android:id="@+id/past_participation_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="7"
            android:textColor="@color/colorGreen"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/past_CardTitle"
            app:layout_constraintTop_toBottomOf="@+id/past_CardTitle" />

        <TextView
            android:id="@+id/past_participation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="참여 인원"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/past_participation_count"
            app:layout_constraintStart_toStartOf="@+id/past_participation_count"
            app:layout_constraintTop_toBottomOf="@+id/past_participation_count" />

        <TextView
            android:id="@+id/past_success_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:text="6"
            android:textColor="@color/colorBlue"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/past_participation_count"
            app:layout_constraintTop_toTopOf="@+id/past_participation_count" />

        <TextView
            android:id="@+id/past_success_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="달성 인원"
            app:layout_constraintEnd_toEndOf="@+id/past_success_count"
            app:layout_constraintStart_toStartOf="@+id/past_success_count"
            app:layout_constraintTop_toBottomOf="@+id/past_success_count" />

        <View
            android:id="@+id/past_partition_view"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="20dp"
            android:background="@color/cardview_dark_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/past_success_count"
            app:layout_constraintTop_toTopOf="@+id/past_success_count" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="내 벌금"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/past_partition_view"
            app:layout_constraintTop_toTopOf="@+id/past_partition_view" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="총 벌금"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/past_MyMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="0 원"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/past_CardDate"
            app:layout_constraintTop_toTopOf="@+id/textView8" />

        <TextView
            android:id="@+id/past_AllMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000 원"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="@+id/past_MyMoney"
            app:layout_constraintTop_toTopOf="@+id/textView9" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>


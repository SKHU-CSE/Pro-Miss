<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="벌금 금액"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/frg_appoint2_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/frg_appoint2_money"
        android:layout_marginHorizontal="25dp"
        android:layout_below="@id/frg_appoint2_title"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:lines="1"
        android:minWidth="150dp"
        android:textColor="#000000"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textColor="#70ad47"
        android:textStyle="bold"
        android:textSize="18sp"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:background="#70ad47"
        android:layout_alignLeft="@id/frg_appoint2_money"
        android:layout_alignRight="@id/frg_appoint2_money"
        android:layout_below="@id/frg_appoint2_money"
        android:layout_marginTop="10dp"></View>
</RelativeLayout>
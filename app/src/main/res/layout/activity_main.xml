<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_notify"
        android:layout_alignParentRight="true"
        android:layout_margin="14dp"
        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_notifications_none_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_fiber_manual_record_black_24dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20sp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:layout_gravity="right"
            android:text="2"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_alignBottom="@id/main_notify"
        android:paddingHorizontal="15dp"
        android:background="@drawable/blackstroke"
        android:layout_marginLeft="14dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY"
            android:textSize="19sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_centerVertical="true">
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/bt_add"
        android:layout_gravity="center"
        android:background="@null"
        android:id="@+id/main_MakeProtocal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약속 만들기"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/main_MakeProtocal_text"
            android:layout_gravity="center"
            android:layout_marginBottom="110dp"/>


    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:id="@+id/main_ShowProtocal"
        android:background="@null"
        android:layout_below="@id/main_MakeProtocal"
        android:src="@drawable/bt_more"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참여중인 약속"
            android:id="@+id/main_ShowProtocal_text"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>
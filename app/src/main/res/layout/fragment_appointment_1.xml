<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fbfbfb">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="약속명"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/frg_appoint1_title"
            android:textSize="21sp"
            android:drawableRight="@drawable/ic_brush_black_24dp"
            android:layout_marginBottom="30dp"
            android:background="@null"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:id="@+id/frg_appoint1_card1"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/frg_appoint1_title"
            android:layout_marginHorizontal="25dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="15dp"
                    android:id="@+id/frg_appoint1_card1_view"
                    android:background="#7e7e7e"></View>


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_toLeftOf="@id/frg_appoint1_card1_view"
                    android:layout_marginTop="10dp"
                    android:id="@+id/frg_appoint1_card1_date"
                    android:textStyle="bold"
                    android:layout_marginRight="27dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:text="Date"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/frg_appoint1_card1_view"
                    android:layout_marginTop= "10dp"
                    android:layout_marginLeft="27dp"
                    android:id="@+id/frg_appoint1_card1_time"
                    android:layout_height="wrap_content"
                    android:text="Time"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorGreen"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_below="@id/frg_appoint1_card1_date"
                    android:layout_toLeftOf="@id/frg_appoint1_card1_view"
                    android:layout_alignRight="@id/frg_appoint1_card1_date"
                    android:id="@+id/frg_appoint1_card1_DateText"
                    android:layout_height="wrap_content"
                    android:text="2019-03-15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorGreen"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_below="@id/frg_appoint1_card1_date"
                    android:layout_toRightOf="@id/frg_appoint1_card1_view"
                    android:layout_alignLeft="@id/frg_appoint1_card1_time"
                    android:id="@+id/frg_appoint1_card1_TimeText"
                    android:layout_height="wrap_content"
                    android:text="2019-03-15"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_below="@id/frg_appoint1_card1"
        android:layout_marginHorizontal="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:id="@+id/frg_appoint1_timer_title"
                android:text="타이머"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약속"
                android:textColor="#000000"
                android:layout_alignLeft="@id/frg_appoint1_timer_title"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:id="@+id/frg_appoint1_timer_t1"
                android:layout_below="@id/frg_appoint1_timer_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2시간"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/frg_appoint1_timer_t1"
                android:layout_alignTop="@id/frg_appoint1_timer_t1"
                android:id="@+id/frg_appoint1_timer_t2"
                android:layout_marginLeft="15dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전부터 타이머 작동"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/frg_appoint1_timer_t2"
                android:layout_alignTop="@id/frg_appoint1_timer_t1"
                android:id="@+id/frg_appoint1_timer_t3"
                android:layout_marginLeft="15dp"/>
       </RelativeLayout>

    </android.support.v7.widget.CardView>

    </RelativeLayout>
</FrameLayout>
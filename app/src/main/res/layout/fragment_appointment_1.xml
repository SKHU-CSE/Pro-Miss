<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fbfbfb">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="약속명"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/frg_appoint1_title"
            android:textSize="21sp"
            android:drawableRight="@drawable/ic_brush_black_24dp"
            android:layout_marginBottom="15dp"
            android:background="@null"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/frg_appoint1_title"
        android:layout_marginHorizontal="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:id="@+id/frg_appoint1_timer_title"
                android:text="타이머"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약속"
                android:textColor="#000000"
                android:layout_alignLeft="@id/frg_appoint1_timer_title"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:id="@+id/frg_appoint1_timer_t1"
                android:layout_below="@id/frg_appoint1_timer_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2시간"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/frg_appoint1_timer_t1"
                android:layout_alignTop="@id/frg_appoint1_timer_t1"
                android:id="@+id/frg_appoint1_timer_t2"
                android:layout_marginLeft="15dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전부터 타이머 작동"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/frg_appoint1_timer_t2"
                android:layout_alignTop="@id/frg_appoint1_timer_t1"
                android:id="@+id/frg_appoint1_timer_t3"
                android:layout_marginLeft="15dp"/>
       </RelativeLayout>

    </android.support.v7.widget.CardView>

    </RelativeLayout>
</FrameLayout>